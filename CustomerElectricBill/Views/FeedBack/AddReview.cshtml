@model FeedbackModel
<form method="post" asp-action="AddReview">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Feedback</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UserId"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Review"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Stars"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="UserId" class="form-control" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Review" class="form-control" />
                        <span asp-validation-for="Review" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Stars" class="form-control" />
                        <span asp-validation-for=" Stars" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Submit" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
