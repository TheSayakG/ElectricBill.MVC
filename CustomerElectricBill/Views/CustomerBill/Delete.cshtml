@model Billing

<form method="post" asp-action="DeleteBill">
    <input asp-for="txid" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Bill</h2>
        </div>
        <div class="row">
            <div class="col-16">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="txid"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="UserId"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="readings"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="DocumentUrl"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="txid" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="UserId" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="readings" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="DocumentUrl" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-controller="CustomerBill" asp-action="Index" class="btn btn-danger w-75">Back to Home</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
