        <div class="col-md-10">
            <p>Upload one or more files</p>>
            <input type="file" name="files" />
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </div>
</form>